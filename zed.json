{
  "theme": "One Dark",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 14,
  "ui_font_size": 14,
  "tab_size": 4,
  "soft_wrap": "none",
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "auto_signature_help": false,

  "languages": {
    "Java": {
      "tab_size": 4,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": "language_server",
      "completion_triggers": ["."],
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    }
  },

  "lsp": {
    "jdtls": {
      "initialization_options": {
        "extendedClientCapabilities": {
          "classFileContentsSupport": true
        },
        "settings": {
          "java": {
            "jdt": {
              "ls": {
                "vmargs": "-XX:+UseG1GC -XX:+UseStringDeduplication -Xmx4G -Xms512m -XX:+TieredCompilation -XX:TieredStopAtLevel=1 -Xverify:none -XX:+UseCompressedOops -XX:ReservedCodeCacheSize=512m"
              }
            },
            "configuration": {
              "updateBuildConfiguration": "automatic"
            },
            "completion": {
              "enabled": true,
              "maxResults": 30,
              "guessMethodArguments": false,
              "overwrite": true,
              "chain": {
                "enabled": false
              },
              "postfix": {
                "enabled": false
              },
              "favoriteStaticMembers": [
                "org.junit.Assert.*",
                "org.mockito.Mockito.*"
              ],
              "filteredTypes": ["java.awt.*", "com.sun.*", "sun.*"]
            },
            "implementationsCodeLens": {
              "enabled": false
            },
            "referencesCodeLens": {
              "enabled": false
            },
            "signatureHelp": {
              "enabled": true
            },
            "import": {
              "gradle": {
                "enabled": true,
                "offline": {
                  "enabled": true
                }
              },
              "maven": {
                "enabled": true,
                "offline": {
                  "enabled": true
                }
              },
              "exclusions": [
                "**/node_modules/**",
                "**/.metadata/**",
                "**/target/**",
                "**/build/**",
                "**/.gradle/**",
                "**/.m2/**"
              ]
            },
            "maxConcurrentBuilds": 1,
            "autobuild": {
              "enabled": true
            },
            "contentProvider": {
              "preferred": "fernflower"
            },
            "sources": {
              "organizeImports": {
                "starThreshold": 5,
                "staticStarThreshold": 3
              }
            },
            "trace": {
              "server": "off"
            }
          }
        }
      }
    }
  },

  "inlay_hints": {
    "enabled": false
  },

  "autosave": "on_focus_change",

  "file_scan_exclusions": [
    "**/.git",
    "**/target",
    "**/build",
    "**/.gradle",
    "**/.m2",
    "**/node_modules"
  ],

  "terminal": {
    "font_family": "JetBrains Mono",
    "font_size": 13
  }
}
